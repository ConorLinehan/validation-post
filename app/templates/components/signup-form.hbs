<div class="columns">
  <div class="column is-half">

    <label class="label">Name</label>
    <p class="control name">
      <input
      class="input"
      type="text"
      name="name"
      value={{name}}
      placeholder="You're name"
      oninput={{action (action (mut name)) value="target.value"}}
      >
    </p>

    <label class="label">Address</label>
    <p class="control address">
      {{#power-select-multiple
        options=selectionAddresses
        selected=addresses
        onchange=(action (mut addresses))
        placeholder="Select two addresses" as |address|}}
        {{address.name}}
      {{/power-select-multiple}}
    </p>

    <label class="label">Favorite Palindrome</label>
    <p class="control palindrome">
      <input
      class="input"
      type="text"
      name="name"
      value={{palindrome}}
      placeholder="You're favorite palindrome"
      oninput={{action (action (mut palindrome)) value="target.value"}}
      >
    </p>

    <label class="label">Email</label>
    <p class="control email">
      <input
      class="input"
      type="text"
      name="name"
      value={{email}}
      placeholder="A unique Email"
      oninput={{action (action (mut email)) value="target.value"}}
      >
    </p>

    <label class="label">Favorite bit of Media</label>
    <p class="control favorite-media">
      <input
      class="input"
      type="text"
      name="name"
      value={{media}}
      placeholder="E.g Book, Song, Film"
      oninput={{action (action (mut media)) value="target.value"}}
      >
    </p>

    <p class="control submit">
      {{task-button action=save}}
    </p>
  </div>
</div>
